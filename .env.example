# App Configuration
NEXT_PUBLIC_URL=http://localhost:3000

# WalletConnect Configuration (Required)
# Get your Project ID from https://cloud.walletconnect.com/
# This enables connections to MetaMask, Valora, Coinbase Wallet, and other wallets
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# Divvi Web3 Impact Tracking Configuration (Optional)
# Register at https://app.divvi.xyz/builders to get your builder address and campaign IDs
NEXT_PUBLIC_DIVVI_ENABLED=true
NEXT_PUBLIC_DIVVI_BUILDER_ADDRESS=your_registered_builder_wallet_address
NEXT_PUBLIC_DIVVI_CAMPAIGN_IDS=campaign_id_1,campaign_id_2,campaign_id_3

# Celo Network Configuration (Optional - uses defaults if not set)
NEXT_PUBLIC_CELO_RPC_URL=https://forno.celo.org
NEXT_PUBLIC_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org
